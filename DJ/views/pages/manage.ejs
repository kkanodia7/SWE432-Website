<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <style>
        tbody{
            color:darkslategrey;
        }

        table td:first-child{
            color: black;
        }
        .row{
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            width: 100%;
        }
        .column{
            display: flex;
            flex-direction: column;
            flex-basis: 100%;
            flex: 1;
        }
    </style>
</head>
<body>

    <!-- Main container for everything -->
    <div class="container">

        <!-- Helps keep footer at bottom -->
        <div class="content-wrap">
            
            <!-- Header -->
            <header>
                <%- include('../partials/header'); %>
            </header>

            <!-- Main content -->
            <div class="sitebody">
                <p><a href="" style="color:blue">Home</a> > <a href="/index/<%= userid %>" style="color:blue">Time Slots</a> > Manage Time Slot</p>
                <h1>Manage Time Slot</h1>

                <div class="row">
                
                    <!--Left column of grid layout-->
                    <div class="column" style="flex: 1">
                        <figure>
                            <img src="/img/searchicon.png" style="max-width: 200px; max-height:200px;"/>
                            <figcaption>
                                <h2>Your scheduled playlist</h2>
                                <h3 id="date-time">
                                    <p id="date"><%= timeslot.date %></p>
                                    <p id="times"><%= timeslot.start %> - <%= timeslot.end %></p>
                                </h3>
                            </figcaption>
                        </figure>

                        <div id="dialog-wrapper" style="position:relative;"">
                            <dialog open style="margin: 0; position:absolute; border-color: green; border-width: 2px; border-radius: 4px; background-color: lightgreen;">
                                <h4>You made changes to your playlist.</h4>
                                <form method="dialog">
                                    <button autofocus id="dialog-undo">Undo</button>
                                    <button id="dialog-ok">OK</button>
                                </form>
                            </dialog>
                        </div>
                    </div>
                
                    <!--Right column of grid layout-->
                    <div class="column" style="flex: 2">

                        <!--Playlist for this timeslot-->
                        <div>
                            <h2 id="timeslot-title"><%= timeslot.title %></h2> 
                            <p id="timeslot-desc"><%= timeslot.desc %></p>

                            <button type="button" id="edit-form-toggle" onclick="(() => 
                                document.getElementById('playlist-form').style.display = 'inline')()">
                                Edit playlist information
                            </button>
                            <form id="playlist-form" onsubmit="return false">
                                <br>
                                Edit title:
                                <br>
                                <input type="text" name="title" id="edit-title">
                                <br>
                                Edit description:
                                <br>
                                <input type="textarea" name="desc" id="edit-desc">
                                <br>
                                <input type="submit" value="Submit">
                            </form>

                            <div class="listing">
                                <div class="list-box">
                                    <!-- List elements here -->
                                    <div class="grid-item">

                                        <form id="current-timeslot-form" onsubmit="return false">
                                            <table>
                                                <thead>
                                                    <th></th>
                                                    <th>Artist</th>
                                                    <th>Song Title</th>
                                                    <th>Actions</th>
                                                    <th>Select</th>
                                                </thead>
                                                <tbody id="timeslot-body">
                                                    <% var i = 1; %>
                                                    <% timeslot.songs.forEach(function(song) {%>
                                                    <tr>
                                                        <td><b><%= i++ %></b></td>
                                                        <td><%= song.artist %></td>
                                                        <td><%= song.title %></td>
                                                        <td>
                                                            <button class="play-btn" type="button">Play</button>
                                                        </td>
                                                        <td>
                                                            <input type="checkbox" class="checkbox"/>
                                                        </td>
                                                    </tr>
                                                    <%});%>
                                                </tbody>
                                                <tfoot>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td>
                                                        <input type="submit" value="Remove selected" id="remove-current-songs"/>
                                                    </td>
                                                </tfoot>
                                            </table>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <hr>
                        </div>

                        <!--Previous timeslot playlists to pick songs from-->
                        <h2>Your past playlists</h2>
                        
                        <!--Each playlist table is its own form-->
                        <ul id="past-playlist-list" style="padding: 0; margin: 0; list-style-type: none;">
                            <!-- List of elements -->
                            <% pastTimeslots.forEach(function(pastslot) {%>
                            <li>
                                <div class="listing">
                            
                                <h3><p class="past-date-time"><%= pastslot.date %> <%= pastslot.start %> - <%= pastslot.end %></p>
                                </h3>
                                <div class="list-box">
                                        <!-- List icon here -->
                                    <div class="grid-item">
                                            <figure>
                                                <img src="../../img/searchicon.png" id="list-icon"></a>
                                                <figcaption>
                                                <h4 class = "past-title"><%= pastslot.title %></h4>
                                                    <p class = "past-desc"><%= pastslot.desc %></p>
                                                </figcaption>
                                            </figure>
                                        </div>

                                    <!-- List elements here -->
                                    <div class="grid-item">
                                            <div class="past-playlist-table-container">   
                                                <table>
                                                    <thead>
                                                        <th></th>
                                                        <th>Artist</th>
                                                        <th>Song Title</th>
                                                        <th>Actions</th>
                                                    </thead>
                                                    <tbody>
                                                        <% var i = 1;%>
                                                        <% pastslot.songs.forEach(function(song) {%>
                                                        <tr>
                                                            <td><b><% i++ %></b></td>
                                                            <td><%= song.artist %></td>
                                                            <td><%= song.title %></td>
                                                            <td>
                                                                <button class="play-btn" type="button">Play</button>
                                                            </td>
                                                        </tr>
                                                        <%});%>
                                                    </tbody>
                                                    <tfoot>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td>
                                                            <button>
                                                                <a href="/playlist/<%= userid %>/<%= timeslot.tsid %>/<%= pastslot.tsid %>">Add songs to current timeslot
                                                            </button>
                                                        </td>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <%});%>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <footer>
                <%- include('../partials/footer'); %>
            </footer>
        </div>

        <!-- Audio Player -->
        <div id="audio-player">
            <%- include('../partials/player'); %>
        </div>
    </div>
</body>
</html>